{{ import('css','newsLenta.css','ext.widgets.views') }}

<div class='news-lenta-widget'>
    {% for item in news %}
        <div class='news-lenta-item grid8'>
            <div class='grid-left grid-right'>
                <div class='news-lenta-item-section'>
                    <div class='{{ item.sectionClass }}'>
                        {{ item.sectionName }}
                    </div>
                </div>
                <div class='news-lenta-item-date'>{{ item.date }}</div>
                <div class='clear'></div>
                <div class='news-lenta-item-text'>{{ item.text|raw }}</div>
            </div>
        </div>
    {% endfor %}
</div>