{% extends 'modules/company/views/base.twig' %}

{% block css %}
    {{ parent() }}
    {{ import('css','show.css', 'application.modules.vacancy.views') }}
{% endblock %}

{% block js %}
    {{ parent() }}

    <script type="text/javascript">

    // Обновляем размеры страницы только после загрузки всех картинок
    $(window).load( function() { app.resize(true); } );

    vacancyListContent =
    {
        posCont: false,
        centerBlockWidth: 0,
        rightColumnWidth: 0,
        textBlockWidth: 0,

        init: function()
        {
            var self = this;
            self.posCont = $('#js-company-page-content-pos');
            self.centerBlockWidth = $('#js-vacancy-block').width();
            self.rightColumnWidth = $('#js-vacancy-right-block').width();
            self.textBlockWidth = $('#js-vacancy-block-text').width();

            app.addListener(app.eventReposition, vacancyListContent.onResize);
            app.resize(true);

        },
        onResize: function( ev )
        {
            var ceils = ev.ceils;

            var cont = $('#js-company-page-content');
            var leftBlock = $('#js-company-page-menu');
            var centerBlock = $('#js-vacancy-block');
            var rightBlock = $('#js-vacancy-right-block');
            var textBlock = $('#js-vacancy-block-text');

            // Принудительно выставляем высоту блока
            var h = (leftBlock.height() > centerBlock.height())
                ? leftBlock.height()
                : centerBlock.height();
            h = Math.ceil(h);
            cont.height(h);

            cbWidth = vacancyListContent.centerBlockWidth;
            rbWidth = vacancyListContent.rightColumnWidth;
            tbWidth = vacancyListContent.textBlockWidth;

            var params = {
                'progress': vacancyListContent.onProgress,
                'complete': vacancyListContent.onProgress
            };

            if (ceils == 3)
            {
                centerBlock.width(cbWidth - 2 * vacancyListContent.rightColumnWidth);
                app.resizeElement( rightBlock, 0, true, params );
                app.resizeElement( textBlock, tbWidth - vacancyListContent.rightColumnWidth, true, params );
            }
            else if (ceils == 4)
            {
                centerBlock.width(cbWidth - vacancyListContent.rightColumnWidth);
                app.resizeElement( rightBlock, 0, true, params );
                app.resizeElement( textBlock, tbWidth, true, params );
            }
            else if (ceils == 5)
            {
                centerBlock.width(cbWidth);
                app.resizeElement( rightBlock, rbWidth, true, params );
                app.resizeElement( textBlock, tbWidth, true, params );
            }

            app.resizeElement( vacancyListContent.posCont, ceils * app.gridWidth );
        },
        onProgress: function()
        {
            var cont = $('#js-company-page-content');
            var leftBlock = $('#js-company-page-menu');
            var centerBlock = $('#js-vacancy-block');

            // Принудительно выставляем высоту блока
            var h = (leftBlock.height() > centerBlock.height())
                ? leftBlock.height()
                : centerBlock.height();
            h = Math.ceil(h);
            cont.height(h);
        }
    };
    $(document).ready( function()
    {
        vacancyListContent.init();
    });
    </script>
{% endblock %}


{% block innerLeft %}
    {{ parent() }}
    {{ widget('ext.widgets.company.VacancyMenuWidget', {'vacancyId':vacancy.id, 'vacancies':vacancies} ) }}
{% endblock %}

{% block innerContent %}
    <div id='js-vacancy-block' class='vacancy-block  grid64'>
        <div class='vacancy-block-title  semibold grid-bottom2 grid-left2 grid-right2'>{{vacancy.title|raw}}</div>
        <div id='js-vacancy-block-text' class='vacancy-block-text  grid48 grid-bottom2 left'>
            <div class='grid-left2 grid-right2'>
                {{vacancy.text|raw}}
            </div>
        </div>
        <div id='js-vacancy-right-block' class='vacancy-right-block  grid16 left'>
        </div>
    </div>
{% endblock %}