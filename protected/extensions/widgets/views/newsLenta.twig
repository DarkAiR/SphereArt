{{ import('css','newsLenta.css','ext.widgets.views') }}

<div class='news-lenta-widget'>
    {% for item in news %}

        <div class='news-lenta-item grid16'>
            <div class='border-cont' style='height:100%'>
                <div class='border-l' style='background:#d9d9d9;'></div>
                <div class='border-t' style='background:#d9d9d9;'></div>
                <div class='border-b' style='background:#d9d9d9;'></div>
                {% if loop.last %}
                    <div class='border-r' style='background:#d9d9d9;'></div>
                {% endif %}


                <div class='news-lenta-item-inner  grid-left2 grid-right2'>
                    <div class='news-lenta-item-section'>
                        <div class='{{ item.sectionClass }}'>
                            {{ item.sectionName }}
                        </div>
                    </div>
                    <div class='news-lenta-item-date'>{{ item.date }}</div>
                    <div class='clear'></div>
                    <div class='news-lenta-item-text'>{{ item.text|raw }}</div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>